<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0072D7"
    tools:context=".LessonsFragment">

    <Button
        android:id="@+id/button6"
        android:layout_width="112dp"
        android:layout_height="96dp"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="#FFC107"
        android:fontFamily="@font/chango"
        android:text="K Sound"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PsoundsButton" />

    <Button
        android:id="@+id/PsoundsButton"
        android:layout_width="112dp"
        android:layout_height="96dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#FFC107"
        android:fontFamily="@font/chango"
        android:text="P Sound"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView20"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="112dp"
        android:layout_height="96dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="#FFC107"
        android:fontFamily="@font/chango"
        android:text="T Sound"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lessonID"
        android:layout_width="228dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/chango"
        android:text="Lecciones "
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="161dp"
        android:fontFamily="@font/chango"
        android:text="Porfavor elige un sonido que te gustaria empezar a practicar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lessonID" />

    <Button
        android:id="@+id/button"
        android:layout_width="112dp"
        android:layout_height="96dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="140dp"
        android:backgroundTint="#FFC107"
        android:fontFamily="@font/chango"
        android:text="L Sound"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/k_lips"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/p_lips"
        app:layout_constraintBottom_toTopOf="@+id/PsoundsButton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/l_lips"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/t_lips"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>