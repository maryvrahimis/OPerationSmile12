<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0072D7"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textColor="#EFE6E6"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="307dp"
        android:layout_height="180dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"

        android:background="@color/SpecialBlue"
        app:cardBackgroundColor="@color/SpecialBlue"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_first">

        <androidx.cardview.widget.CardView
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:translationX="160dp"
            android:translationY="20dp"
            app:cardBackgroundColor="#00FFFFFF">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="Hola Mary!"
                android:textAlignment="center"
                android:textColor="@color/BgColor"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="137dp"
            android:layout_height="141dp"
            android:src="@drawable/hatbird"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Lesson "
            android:textColor="#F6F3F3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="150dp"
            android:translationY="98dp" />

        <ImageView
            android:id="@+id/notCompletedLesson"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/mustdo"
            android:translationX="180dp"
            android:translationY="124dp" />

        <ImageView
            android:id="@+id/completedLesson"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="false"
            android:src="@drawable/done"
            android:translationX="180dp"
            android:translationY="124dp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/streakText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="55dp"
            android:translationY="140dp" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/star"
            android:translationX="170dp"
            android:translationY="55dp" />

        <TextView
            android:id="@+id/totalPointsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="200dp"
            android:translationY="55dp"
            android:text="0 points" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/flame"
            android:translationX="12dp"
            android:translationY="130dp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/home_to_patients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="113dp"
        android:text="Patients"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="336dp"
        android:layout_height="371dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="447dp"
                app:cardBackgroundColor="@color/SpecialBlue"
                app:cardCornerRadius="20dp">

                <ImageButton
                    android:id="@+id/lessonsButton"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:background="@color/BgColor"
                    android:cropToPadding="false"
                    android:elevation="80dp"
                    android:padding="11dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lessionsicon"
                    android:translationX="30dp"
                    android:translationY="10dp" />

                <ImageButton
                    android:id="@+id/reportsButton"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:background="#0072DE"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/labledreporticon"
                    android:translationX="30dp"
                    android:translationY="155dp" />

                <ImageButton
                    android:id="@+id/storeButton"
                    android:layout_width="127dp"
                    android:layout_height="127dp"
                    android:background="#0072DE"
                    android:elevation="80dp"
                    android:padding="9dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bird"
                    android:translationX="180dp"
                    android:translationY="10dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>